  {{!-- {{> form_question
      title="Age"
      description="MLH needs this data for eligibility purposes, as some codes are only available to hackers 18+"
      input_type="number" number=true
      input_name="age"
      placeholder="Age"
      textarea=false
      required=true
  }} --}}
  {{> form_question
      title="Would you like to receive emails from us about sponsored opportunities and free resources?"
      description="Your email will not be given to our sponsors."
      radio=true
      input_name="sponsor_emails"
      options='[
        {"text":"Yes","value":"1"},
        {"text":"No","value":"0"}
      ]'
      required="true"
  }}
  {{> form_question
      title="How prepared do you feel for the industry, on a scale from 1 to 7?"
      description="1 = not at all, 4 = somewhat, 7 = very prepared"
      input_type="number" number=true
      input_name="industry_readiness"
      placeholder="2"
      min="1"
      max="7"
      required=true
      error_text="Enter a number between 1 and 7"
  }}
  {{> form_question
      title="How much does your school assist you in improving your communication skills, on a scale from 1 to 7?"
      description="1 = not at all, 4 = somewhat, 7 = a lot"
      input_type="number" number=true
      input_name="communication_rating"
      placeholder="3"
      min="1"
      max="7"
      required=true
      error_text="Enter a number between 1 and 7"
  }}
  {{> form_question
      title="Attendance Agreements"
      description=""
      input_name="attendance_agreement"
      checkbox=true
      min="2"
      options='[
        {"text":"I understand that because there is limited space, I must email the organizers if I cannot attend the event.","value":"presence"},
        {"text":"I understand that I should bring a laptop, as we will be using it during the pitch competition.","value":"laptop"}
      ]'
      error_text="Please confirm all of the following"
  }}
  <input type="hidden" id="referrer-input" name="referrer"> {{!-- For redirecting back with errors --}}
  <input type="hidden" id="ref-param-input" name="ref_source"> {{!-- For ?ref params --}}
  
  <input type="submit" value="Submit">
</form>
<script defer src="script.js"></script>
