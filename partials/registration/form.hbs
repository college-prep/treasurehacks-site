<form action="{{REGISTRATION_SUBMISSION_URL}}" method="POST" enctype="multipart/form-data">
  <div class="item-container header-image-container"><img src="banner.webp" alt="Treasure Hacks Banner" width="640" height="160"></div>
  <div class="item-container header">
    <h1>Treasure Hacks: Soft Skill Seminar Registration</h1>
    <p>Thanks for your interest in our seminar! Please note that since this is an in-person event, there is limited space available. Applications are evaluated on a rolling basis, providing a good opportunity for acceptance as long as spaces are available.<br><br>
      Social Media Links:
      <ul>
        <li>Website: <a target="_blank" href="https://seminar.treasurehacks.org/">https://seminar.treasurehacks.org/</a><br></li>
        <li>YouTube: <a target="_blank" href="https://youtube.com/@treasurehacks">https://youtube.com/@treasurehacks</a><br></li>
        <li>Instagram: <a target="_blank" href="https://instagram.com/treasure_hacks">https://instagram.com/treasure_hacks</a><br></li>
        <li>LinkedIn: <a target="_blank" href="https://www.linkedin.com/company/treasure-hacks/">https://www.linkedin.com/company/treasure-hacks/</a></li>
        <li>Discord: <a target="_blank" href="https://treasurehacks.dev/discord">https://treasurehacks.dev/discord</a></li>
      </ul>
    </p>
  </div>
  {{> form_question
      title="First Name"
      description=""
      input_type="text"
      input_name="first_name"
      placeholder="First name"
      textarea=false
      required=true
  }}
  {{> form_question
      title="Last Name"
      description=""
      input_type="text"
      input_name="last_name"
      placeholder="Last name"
      textarea=false
      required=true
  }}
  {{> form_question
      title="Email Address"
      description=""
      input_type="email"
      input_name="email"
      placeholder="someone@example.com"
      textarea=false
      required=true
      pattern="[\w\-\.]+@([\w\-]+\.)+[\w\-]{2,4}"
      error_text="Please enter a valid email"
  }}
  {{> form_question
      title="Phone Number"
      description="Your phone number will <b>only</b> be used in the case that we are unable to send an email confirmation 1 week before the event"
      input_type="text"
      input_name="phone_number"
      placeholder="+67 (999) 123-1234"
      textarea=false
      pattern="^(\+\d{1,3}\s?)?\(?(\d{3})\)?[\s.\-]?(\d{3})[\s.\-]?(\d{4})$"
      required=true
      error_text="Please enter a valid phone number"
  }}
  {{> form_question
      title="Where did you hear about us?"
      input_name="referral"
      checkbox=true
      options='[
        "Flyer",
        "Website",
        "School Announcement",
        "Social Media"
      ]'
      min="1"
      other=true
      error_text="Please choose at least one option"
  }}
  {{> form_question
      title="Current/Highest Level of Education"
      description=""
      radio=true
      input_name="edu_level"
      required="true"
      options='[
        "Less than Secondary / High School",
        "Secondary / High School",
        "Undergraduate University (2 year - community college or similar)",
        "Undergraduate University (3+ year)",
        "Graduate University (Masters, Professional, Doctoral, etc.)",
        "Code School / Bootcamp",
        "Other Vocational / Trade Program or Apprenticeship",
        "Post Doctorate",
        "I\'m currently not a student"
      ]'
  }}
  {{> form_question
      title="What are you studying?"
      input_name="student_type"
      input_type="text"
      required=true
      placeholder="Major or intended area of study"
      error_text="This question is required"
  }}
  {{> form_question
      title="Which of the following best describes you? (optional)"
      description="This question is used ONLY to gauge our demographics and is not associated with your response."
      checkbox=true
      input_name="student_ethnicity"
      min="0"
      options='[
        "White/Caucasian",
        "Hispanic, Latino, or Spanish",
        "Black or African American",
        "Asian",
        "American Indian or Alaska Native",
        "Middle Eastern or North African",
        "Native Hawailan or Other Pacific Islander",
        "Some other race, ethnicity, or origin"
      ]'
  }}
  {{> form_question
      title="Which of the following do you identify as? (optional)"
      description="This question is used ONLY to gauge our demographics and is not associated with your response."
      radio=true
      input_name="student_gender_identification"
      options='[
        {"text":"Not selected","value":"Prefer Not to Answer","hidden":true,"checked":true},
        "Female",
        "Male",
        "Transgender Female",
        "Transgender Male",
        "Gender Variant/Non-Conforming",
        "Not Listed",
        "Prefer Not to Answer"
      ]'
  }}
  {{> form_question
      title="Media Consent (Required)"
      description="I authorize Treasure Hacks to use photographs and/or video footage of me from this event for marketing materials and/or social media."
      input_name="media_consent"
      checkbox=true
      min="1"
      options='[{"text":"I agree","value":"1"}]'
      error_text="This question is required"
  }}
