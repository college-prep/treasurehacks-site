<div class="item-container">
  <div class="label">{{title}}</div>
  {{#if description}}
    <i>{{{description}}}</i>
  {{/if}}
  {{#if custom}}
    {{>content}}
  {{else if radio}}
    {{#getJsonContext options}}{{#each this}}
      <label><input
        type="radio"
        name="{{../../input_name}}"
        value="{{#if text}}{{text}}{{else}}{{this}}{{/if}}"
        {{#if id}} id="{{id}}"{{/if}}
        {{#if ../../required}}required{{/if}}
      >{{#if text}}{{text}}{{else}}{{this}}{{/if}}</label>
    {{/each}}{{/getJsonContext}}
    {{#if other}}
      <label>
        <input type="radio" name="{{input_name}}" id=""> Other: 
        <div class="input-wrapper"><input type="text" name="{{input_name}}--other"></div>
      </label>
    {{/if}}
  {{else if file}}
  {{else if textarea}}
    <div class="input-wrapper">
      <textarea type="{{input_type}}" name="{{input_name}}" placeholder="{{placeholder}}"></textarea><br>
    </div>
  {{else}}
    <div class="input-wrapper" {{#if autofill}} data-autofill="{{autofill}}"{{/if}}>
      <input
        type="{{input_type}}"
        name="{{input_name}}"
        placeholder="{{placeholder}}"
        {{#if min}} min="{{min}}"{{/if}}
        {{#if max}} max="{{max}}"{{/if}}
        {{#if accept}} accept="{{accept}}"{{/if}}
        {{#if required}} required{{/if}}
      ><br>
    </div>
  {{/if}}
</div>
